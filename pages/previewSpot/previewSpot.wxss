/* pages/previewSpot/previewSpot.wxss */
pages{
  width: 100%;
  overflow: hidden;
}
.banner-cont{
    width: 100%;
    height: 340rpx;
    position: relative;
}
.banner-infos{
  position: absolute;
  width: 94%;
  padding: 0 30rpx;
  left: 0;
  bottom: 30rpx;
  color: #fff;
}
.spot-name{
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.spot-infors{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: bold;
}
.spotImg{
    display: block;
    width: 100%;
    height: 100%;
}
.nav-cont{
  padding: 40rpx 0 8rpx;
  background: #fff;
  font-size: 30rpx;
}
.nav-item{
  width: 25%;
  display: inline-block;
  text-align: center;
  color: #333;
}
.nav-item:nth-child(n + 4){
  margin-bottom: 40rpx;
}
.nav-icon{
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 10rpx;
  background: orange;
  border-radius: 50%;
}
.list-cont{
  padding: 12rpx 24rpx;
  margin-top: 20rpx;
  background: #fff;
}
.cont-head{
  font-size: 32rpx;
  color: #000;
  padding-left: 12rpx;
  border-left: 3px solid #fd8238;
}
.list-item-container{
  padding: 20rpx 0;
  
}
.list-item{
display: flex;
}
.list-img{
  width: 160rpx;
  height: 160rpx;
}
.list-info{
  flex: auto;
  padding: 20rpx 0 20rpx 22rpx;
  position: relative;
}
.list-title{
  font-size: 34rpx;
  color: #000;
}
.list-intros{
  position: absolute;
  bottom: 0;
  left: 22rpx;
  width: 95%;
  font-size: 26rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
}