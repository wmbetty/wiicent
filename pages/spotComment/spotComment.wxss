/* pages/spotComment/spotComment.wxss */

.list-item{
  margin-left: 30rpx;
  padding: 30rpx 0 30rpx 0;
  border-bottom: 1px solid #ddd;
  color: #000;
}
.list-item:last-child{
  border: none;
}
.uname{
  font-size: 32rpx;
  margin-bottom: 30rpx;
}
.ucontent{
  font-size: 30rpx;
}
.comment-foot{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 94rpx;
  background: #fff;
  border-top: 1px solid #ddd;
}
.comment-input{
  text-align:center;
  background:#eee;
  width:84%;
  margin:10rpx auto;
  height:74rpx;
  line-height:74rpx;
  border-radius:14rpx;
  color: #999;
}
.comment-mask{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  top:0;
  left: 0;
}
.comment-container{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 280rpx;
  background: #fff;
}
.comment-head{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  padding:20rpx 40rpx;
  font-size:32rpx;
  color:#000;
}
.text-cont{
  min-height: 100rpx;
  overflow: auto;
}
textarea{
  padding: 26rpx 40rpx;
}
.r-nodata{
  padding: 30rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #999;
}