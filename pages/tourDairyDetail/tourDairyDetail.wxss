.comment{
	width: 100%;
	padding-left: 34rpx;
	padding-right: 34rpx;
	padding-top: 28rpx;
	padding-bottom: 28rpx;
	box-sizing: border-box;
	border-bottom: 1px solid #dddddd;
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	align-items: stretch;
}
.comment .faceBox .face{
	width: 56rpx;
	height: 56rpx;
	border-radius: 28rpx;
	overflow: hidden;
	margin-right: 34rpx;
}
.comment .infoBox .name{
	font-size: 28rpx;
	color: #999999;
}
.comment .infoBox .date{
	font-size: 24rpx;
	color: #999999;
	margin-top: 8rpx;
}
.comment .infoBox .content{
	font-size: 28rpx;
	color: #333333;
	margin-top: 24rpx;
}
.lineDairyBox{
    width: 100%;
    background-color: #fff;
}
.lineDairyListBox .dayBox{
    width: 100%;
    border-bottom: 1px solid #dddddd;
    padding-left: 30rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
}
.lineDairyListBox .dayBox .authorInfoBox{
	width:100%;
	height:160rpx;
	position:relative;
}
.lineDairyListBox .dayBox .authorInfoBox .authorFace{
	width:100rpx;
	height:100rpx;
	border-radius:50rpx;
	border:2px solid #ff8c00;
	position:absolute;
	top:30rpx;
	left:0;
}
.lineDairyListBox .dayBox .authorInfoBox .authorName{
	font-size: 28rpx;
	color: #ff8c00;
	position:absolute;
	top:43rpx;
	left:146rpx;
}
.lineDairyListBox .dayBox .authorInfoBox .date{
	font-size: 24rpx;
	color: #999999;
	position:absolute;
	top:92rpx;
	left:146rpx;
}
.lineDairyListBox .dayBox .content{
	width: 100%;
	line-height: 34rpx;
	font-size: 28rpx;
	color: #333333;
	margin-top: 20rpx;
}
.lineDairyListBox .dayBox .picBox{
	width: 100%;
	height: 225rpx;
	display: flex;
	justify-content: space-between;
	margin-top: 20rpx;
	position:relative;
}
.lineDairyListBox .dayBox .picBox .keywords{
	position:absolute;
	bottom:-62rpx;
	left:0;
	font-size: 28rpx;
	color: #999999;
}
.lineDairyListBox .dayBox .picBox .pic{
	width: 225rpx;
	height: 225rpx;
	border: 1px solid #dddddd;
	box-sizing: border-box;
}
.lineDairyListBox .dayBox .likereplyBox{
	width: 100%;
	display:flex;
	flex-direction:row-reverse;
}
.lineDairyListBox .dayBox .likereplyBox .iconBox{
	height:80rpx;
	width:100rpx;
	line-height:80rpx;
	color:#999999;
	font-size:28rpx;
	margin-left:20rpx;
}
.lineDairyListBox .dayBox .likereplyBox .iconBox .icon{
	width:24rpx;
	height:24rpx;
	float:left;
	margin-top:28rpx;
	margin-right:20rpx;
}
.addLogo{
	width: 96rpx;
	height: 96rpx;
	border-radius: 48rpx;
	position: fixed;
	right: 58rpx;
	bottom: 106rpx;
	font-size: 74rpx;
	background-color: #09ba79;
	color: #fff;
  text-align: center;
}
._bt_text_box{
	width:100%;
	display:flex;
	justify-content:center;
	height:92rpx;
	padding-top:12rpx;
	background-color:#fff;
	border-top:1px solid #e8e8e8;
	box-sizing:border-box;
}
._btn_text{
	width:90%;
	padding-left:30rpx;
	padding-right:30rpx;
	box-sizing:border-box;
	height:80rpx;
	border:1px solid #e8e8e8;
	border-radius:12rpx;
	position:absolute;
	color:#333333;
	background-color:#f7f7f7;
}