page{
	background-color:#fff;
}
.loginBox{
	width: 100%;
	padding-left: 30rpx;
	padding-right: 30rpx;
	box-sizing: border-box;
	margin-top:40rpx;
}
.loginBox .section input{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1px solid #dddddd;
	color: #999999;
	font-size: 30rpx;
	margin-bottom: 40rpx;
}
.loginBox .btn-area{
  margin-top: 56rpx;
}
.loginBox .btn-area button{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	font-size: 38rpx;
	color: #ffffff;
	text-align: center;
	background-color:#21c186;
}
.loginBox .wx-btnarea{
	position:relative;
	margin-top: 38rpx;
}
.loginBox .wx-btnarea button{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	font-size: 38rpx;
	color: #21c186;
	text-align: center;
	background-color:#fff;
}
.loginBox .wx-btnarea image{
	width:48rpx;
	height:38rpx;
	position:absolute;
	top:31rpx;
	left:30%;
}
.loginBox .formBox .codeSection{
	position: relative;
	width: 100%;
	height: 80rpx;
}
.loginWrap .formBox .showCodeBtn{
	position: absolute;
	top: 0;
	right: 0;
	width: 100rpx;
	height: 80rpx;
  z-index: 10;
}
.loginWrap .formBox .showCodeBtn image{
	margin-top:24rpx;
	margin-left:50rpx;
	width: 44rpx;
	height:44rpx;
}
.loginWrap .formBox .noShowCodeBtn{
	position: absolute;
	top: 0;
	right: 0;
	width: 100rpx;
	height: 80rpx;
  	z-index: 10;
}
.loginWrap .formBox .noShowCodeBtn image{
	margin-top:24rpx;
	margin-left:50rpx;
	width: 44rpx;
	height:44rpx;
}
.loginBox .operationBox{
	width:100%;
	display:flex;
	justify-content:space-between;
	margin-top:34rpx;
}
.loginBox .operationBox view{
	height: 38rpx;
	line-height: 38rpx;
	font-size: 28rpx;
	color: #21c186;
}