.packageAddBox{
	width:100%;
	padding-left:30rpx;
	padding-right:30rpx;
	box-sizing:border-box;
	background-color:#fff;
	border-top:1px solid #dddddd;
	border-bottom:1px solid #dddddd;
	margin-top:30rpx;
}
.packageAddBox::after{
	content:'';
  display:block;
  width:100%;
  height:1px;
  background-color:#fff;
  margin-top:-2px;
}
.itemBox{
	width:100%;
	height:90rpx;
	display:flex;
	flex-wrap:nowrap;
	justify-content:space-between;
	align-items:center;
	border-bottom:1px solid #dddddd;
}
.itemBox .label{
	width:20%;
	font-size:28rpx;
	color:#333333;
}
.itemBox input{
	width:100%;
	height:90rpx;
	font-size:28rpx;
	color:#333333;
	text-align:right;
}
.itemBox .text{
	height:90rpx;
	line-height:90rpx;
	font-size:28rpx;
	color:#333333;
	text-align:right;
}
.btnBox{
	width:100%;
	padding-left:30rpx;
	padding-right:30rpx;
	box-sizing:border-box;
	margin-top:60rpx;
}
.btnBox button{
	width:100%;
	height:94rpx;
	line-height:94rpx;
	background-color:#09ba79;
	color:#fff;
	font-size:32rpx;
	border-style:none;
}