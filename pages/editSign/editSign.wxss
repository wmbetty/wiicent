.btnArea{
	width: 100%;
	padding-left: 40rpx;
	padding-right: 40rpx;
	box-sizing: border-box;
	margin-top: 78rpx;
}
.btnArea button{
	width: 100%;
	height: 96rpx;
	line-height: 96rpx;
	background-color: #fd8238;
