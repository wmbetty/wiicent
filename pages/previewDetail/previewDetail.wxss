/* pages/previewDetail/previewDetail.wxss */
.spot-page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}
.banner-cont{
  width: 100%;
  height: 350rpx;
  position: relative;
}
.spotImg{
  display: block;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5)
}
.spotTitle{
  position: absolute;
  left: 0;
  top:26rpx;
  width: 100%;
  text-align: center;
  font-size:34rpx;
  color:#fff;
}
.spot-foot{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 12rpx 0;
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #eee;
  background: #fff;
}
.foot-item{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 12rpx 0;
  line-height: 44rpx;
}
.foot-item:first-child{
  border-right: 1px solid #eee;
}
.foot-icon{
  width: 46rpx;
  height: 46rpx;
  background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAC4AAAAqAQMAAAD25vtiAAAABlBMVEUAAACZmZl+9SADAAAAAXRSTlMAQObYZgAAAGRJREFUGNOlz7ENgCAQBdDfUbKBLEJkMSKMppswwpVXkCAftDCx0l/cay65+7jiWk9BIIJEFI2pEC7473iTpbPZQ1+5V/4eUhKRxPL5pI6EGtjI1N4pA2sEs+jAyYMy2Qd2YjhO8XxXreAAu68AAAAASUVORK5CYII=');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  margin: 0 28rpx 0 0;

}
.foot-icon.like-icon{
  background: url('data:image/png;base64,') no-repeat;
  background-size: 100% 100%;
}
.like-icon-active{
  background: url('data:image/png;base64,') no-repeat;
  background-size: 100% 100%;
}
.addr-infos{
  padding: 20rpx 28rpx 30rpx;
  /* margin: 40rpx 0 30rpx 0; */
  background: #fff;
  display: none;
}
.voiceBtn{
  width:90rpx;
	height:90rpx;
	position:absolute;
	left:50%;
	top:50%;
	margin-top:-45rpx;
	margin-left:-45rpx;
}
.spot-title-cont{
  padding: 50rpx 0;
  text-align: center;
  background: #fff;
}
.spot-name{
  font-size: 36rpx;
  color: #000;
}
.spot-enname{
  padding: 26rpx 0;
  color: #999;
}
.spot-simple-intro{
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.spot-intros{
  padding: 0 24rpx;background: #fff;
  letter-spacing: 1px;
}
.spot-simple-intro view{
  /* width: 33%; */
  /* 
  word-wrap:break-word; */
}
.spot-simple-intro view:first-child, .spot-simple-intro view:last-child{
  width: 34%;
}
.author-info-container{
  padding: 20rpx 0 0;background: #fff;
}
.author-avatar{
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 auto;
  background: #eee;
}
.author-name{
  margin: 18rpx 0;
  text-align: center;
  color: #09ba79;
}
.spot-business-info{
  padding: 28rpx 0 0 28rpx;
}
.spot-business-info view{
  margin-bottom: 22rpx;
}
.recommend-container{
  margin-top: 18rpx;
  background: #fff;
}
.recommend-head{
  color: #000;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  padding: 34rpx;
}
.tab-container{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}
.tab-item{
  width: 33%;
  text-align: center;
  font-size: 34rpx;
  color: #000;
}
.tab-active{
  border-bottom: 3px solid #09ba79;
}
.tab-text{
  display: block;
  width: 36%;
  margin: 0 auto;
  padding-bottom: 20rpx;
}
.remd-list-view{
  padding-left: 22rpx;
}
.r-nodata{
  padding: 40rpx 0;
  text-align: center;
  font-size: 34rpx;
  color: #999;
  background: #fff;
}
.remd-list-item{
  padding: 22rpx 0;
  border-bottom: 1px solid #ddd;
  display: flex;
}
.remd-list-item:last-child{
  border: none;
}
.remd-spot-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 6px;
}
.remd-spot-info{
  flex: auto;
  position: relative;
  padding-left: 20rpx;
}
.r-spot-name{font-size: 32rpx;}
.r-spot-foot{
  position: absolute;
  bottom: 18rpx;
  left: 20rpx;
  color: #999;
  font-size: 28rpx;
}
.spot-look-more{
  text-align:center;
  border-top:1px solid #ddd;
  padding:20rpx 0;
  color:#888;
}

@keyframes slidedown {
    from {
        transform: translateY(0);
    }
    to {
        transform: translateY(100%);
    }
}
.slidedown {
    animation: slidedown 0.5s linear ;
}
.slideup {
    /* animation: slideup 0.5s linear ; */
    display: block;
}
@keyframes slideup {
    from {
        transform: translateY(100%);
    }
    to {
        transform: translateY(0);
    }
}