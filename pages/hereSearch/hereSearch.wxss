.searchBox{
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display:flex;
  flex-wrap:nowrap;
  align-items:center;
}
.searchBox .lBox{
  width: 80%;
  position:relative;
  padding-left:30rpx;
  box-sizing:border-box;
}
.searchBox .rBox{
  width: 20%;
  color: #333333;
  font-size: 30rpx;
  text-align:center;
}
.searchBox .lBox input{
  width:100%;
  box-sizing:border-box;
  font-size: 28rpx;
  height:68rpx;
  line-height:68rpx;
  color: #333333;
  padding-left: 74rpx;
  background-color:#f2f2f2;
  border-radius:12rpx;
}
.searchBox .lBox .icon{
  width: 34rpx;
  height: 34rpx;
  position:absolute;
  top:18rpx;
  left:50rpx;
}

.spotListBox{
  width: 100%;
}
.spotListBox .spotItem{
  width: 100%;
  position: relative;
  height: 200rpx;
  box-sizing: border-box;
  overflow:hidden;
  padding-left: 34rpx;
  padding-right: 34rpx;
  background-color: #fff;
}
.spotListBox image{
  width:146rpx;
  height: 146rpx;
  position:absolute;
  top:26rpx;
  left:34rpx;
  overflow:hidden;
}
.spotListBox .spotItem .contentBox{
  width:100%;
  padding-left:166rpx;
}
.spotListBox .spotItem .contentBox .title{
  height: 44rpx;
  margin-top:32rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: #333333;
}
.spotListBox .spotItem .contentBox .keyword{
  height: 28rpx;
  font-size: 28rpx;
  color: #999999;
}
.spotListBox .spotItem .contentBox .intro{
  height: 28rpx;
  font-size: 28rpx;
  color: #999999;
  margin-top:20rpx;
}
.spotListBox .spotItem .distance{
  width:300rpx;
  font-size:28rpx;
  color:#999999;
  position:absolute;
  bottom:32rpx;
  right:34rpx;
  text-align:right;
}

.spotDetailBox{
  width: 100%;
  background-color:#fff;
}
.spotDetailBox image{
  width: 100%;
  height: 420rpx;
  overflow: hidden;
}
.spotDetailBox .title{
  width: 100%;
  font-size: 36rpx;
  color: #333333;
  text-align: center;
  margin-top: 60rpx;
}
.spotDetailBox .enTitle{
  width: 100%;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  margin-top: 28rpx;
}
.spotDetailBox .infoBox{
  width: 100%;
  display: flex;
  justify-content: center;
}
.spotDetailBox .infoBox .info{
  font-size: 24rpx;
  color: #999999;
  margin-left: 48rpx;
  margin-top: 20rpx;
}
.spotDetailBox .content{
  width: 100%;
  font-size: 28rpx;
  color: #333333;
  line-height: 60rpx;
  margin-top: 60rpx;
  padding-left:30rpx;
  padding-bottom:160rpx;
  box-sizing:border-box;
}
.spotDetailBox .editContent{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  color: #fff;
  background-color: #ff8c00;
  font-size: 28rpx;
}



.perBox{
  width: 100%;
  height: 100rpx;
  white-space: nowrap;
  background-color:#fff;
  padding-top:21rpx;
  box-sizing:border-box;
  border-top:1px solid #dddddd;
  border-bottom:1px solid #dddddd;
}
.perBox .actPerItem{
  height: 58rpx;
  width:136rpx;
  text-align:center;
  line-height: 58rpx;
  font-size: 26rpx;
  margin-left: 6rpx;
  margin-right: 6rpx;
  display: inline-block;
  border-radius:29rpx;
}