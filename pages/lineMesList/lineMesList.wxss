.noMessageWrap{
	width: 100%;
	min-height: 100%; 
	background-color: #f7f7f7;
}
.noMessageLogo{
	width: 340rpx;
	height: 340rpx;
	position: absolute;
	top: 250rpx;
	left: 50%;
	margin-left: -170rpx;
}
.noMessageIntro{
	width: 100%;
	height: 40rpx;
	line-height: 40rpx;
	font-size: 30rpx;
	position: absolute;
	top: 630rpx;
  text-align: center;
  color: #999999;
}

.messageWrap{
	width: 100%;
	background-color: #fff;
}
.messageWrap .messageItem{
	width: 100%;
	height: 130rpx;
	border-bottom: 1px solid #dddddd;
	box-sizing: border-box;
	position: relative;
	padding-left: 32rpx;
	padding-right: 32rpx;
	padding-top: 22rpx;
}
.messageWrap .messageItem image{
	width: 80rpx;
	height: 80rpx;
	float: left;
}
.messageWrap .messageItem .mesTitleContent{
	height: 80rpx;
	float: left;
  padding-left: 34rpx;
  box-sizing: border-box;
}
.messageWrap .messageItem .mesTitleContent .mesTitle{
	height: 30rpx;
	line-height: 30rpx;
	font-size: 28rpx;
	color: #333333;
  margin-top: 4rpx;
}
.messageWrap .messageItem .mesTitleContent .mesContent{
	height: 28rpx;
	line-height: 28rpx;
	font-size: 26rpx;
	color: #999999;
  margin-top: 14rpx;
}
.messageWrap .messageItem .mesDate{
	width: 200rpx;
	position: absolute;
	top: 26rpx;
	right: 34rpx;
	text-align: right;
	font-size: 28rpx;
	color: #999999;
}
