.userInfoBox{
    width: 100%;
    position: relative;
    padding-top:80rpx;
    padding-bottom:30rpx;
    box-sizing:border-box;
    background: linear-gradient(-45deg,#174d70,#4c757a);
}
.userInfoBox .setting{
    width:98rpx;
    height: 98rpx;
    position:absolute;
    top:0;
    right:0;
}
.userInfoBox .user{
    width:100%;
    height: 142rpx;
    position:relative;
}
.userInfoBox .user .userPic{
    width: 142rpx;
    height: 142rpx;
    border-radius: 71rpx;
    border:1px solid #999999;
    position: absolute;
    top: 0;
    left: 30rpx;
}
.userInfoBox .user .userName{
    position: absolute;
    top: 20rpx;
    left: 196rpx;
    font-size:32rpx;
    color:#fff;
}
.userInfoBox .user .uid{
    position: absolute;
    top: 80rpx;
    left: 196rpx;
    font-size:28rpx;
    color:#fff;
}
.userInfoBox .tabList{
    width:100%;
    display:flex;
    justify-content:space-around;
    flex-direction:row;
    flex-wrap:nowrap;
    margin-top:30rpx;
}
.userInfoBox .tabList .tab{
    width:132rpx;
    display:flex;
    justify-content:center;
    flex-direction:row;
    flex-wrap:wrap;
}
.userInfoBox .tabList .tab image{
    width:72rpx;
    height:72rpx;
}
.userInfoBox .tabList .tab .text{
    width:100%;
    text-align:center;
    font-size:28rpx;
    color:#fff;
    margin-top:12rpx;
}
.item{
    width: 100%;
    height: 108rpx;
    padding-left: 43rpx;
    padding-top: 36rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-bottom: 1px solid #e5e5e5;
}
.icon{
    width: 48rpx;
    height: 48rpx;
    float: left;
}
.title{
    float: left;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 34rpx;
    color: #333333;
    margin-left: 36rpx;
}
.xczs{
    margin-top:20rpx;
    border-top:1px solid #dddddd;
}
