page{
	display: block;  
	min-height: 100%;  
	background-color:#fff;  
}
.personInfoBox{
    width: 100%;
    padding-left: 14rpx;
    padding-right: 14rpx;
    box-sizing: border-box;
}
.userPic{
	width: 100%;
	height: 160rpx;
	padding-top: 6rpx;
	box-sizing: border-box;
  	border-bottom: 1px solid #dddddd;
}
.userPic image{
	width: 148rpx;
	height: 148rpx;
	float: right;
}
.item{
	border-bottom: 1px solid #dddddd;
	height: 100rpx;
	padding-top: 34rpx;
	box-sizing: border-box;
}
.text{
	height: 30rpx;
	line-height: 30rpx;
	font-size: 28rpx;
	color:#333333;
	float: left;
}
.userPic .text{
  margin-top: 64rpx;
}
.textVal{
	height: 30rpx;
	line-height: 30rpx;
	font-size: 28rpx;
	color:#999999;
	float: right;
	text-align: right;
}
.qcodeIcon{
	width: 40rpx;
	height: 40rpx;
	background-size: 40rpx 40rpx;
	background-repeat: no-repeat;
	float: right;
	background-image: url(data:image/png;base64,);
}
.mask{position: fixed;top: 0;left: 0;z-index: 3; width: 100%;height: 100%;opacity: 0;}
.canvas-box{position: fixed;top:999999rpx;left: 0}