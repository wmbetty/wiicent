@import "../../component/nullTip/nullTip.wxss";
.perBox{
	width: 100%;
	height: 100rpx;
	white-space: nowrap;
	background-color:#fff;
	padding-top:21rpx;
	box-sizing:border-box;
}
.perBox .perItem{
	height: 58rpx;
	width:136rpx;
	text-align:center;
	line-height: 58rpx;
	font-size: 26rpx;
	color: #333;
	margin-left: 12rpx;
	margin-right: 12rpx;
	display: inline-block;
}
.perBox .actPerItem{
	height: 58rpx;
	width:136rpx;
	text-align:center;
	line-height: 58rpx;
	font-size: 26rpx;
	margin-left: 12rpx;
	margin-right: 12rpx;
	display: inline-block;
	background-color:#09ba79;
	color:#fff;
	border-radius:29rpx;
}
.tourInfo_wrap{
	width: 100%;
	height:232rpx;
	padding-left:40rpx;
	padding-right:40rpx;
	box-sizing:border-box;
	position:fixed;
	bottom:120rpx;
}
.tourInfo_wrap .tourInfo_box{
	width:100%;
	height:232rpx;
	box-shadow: 5px 5px 5px #dddddd;
	position:relative;
	background-color:#fff;
	padding-left:54rpx;
	padding-top:44rpx;
	box-sizing:border-box;
}
.tourInfo_wrap .tourInfo_box .title1{
	font-size:38rpx;
	color:#333333;
}
.tourInfo_wrap .tourInfo_box .title2{
	font-size:28rpx;
	color:#999999;
	margin-top:20rpx;
}
.tourInfo_wrap .tourInfo_box .icon{
	position:absolute;
	right:45rpx;
	top:45rpx;
	font-size:24rpx;
	color:#09ba79;
}