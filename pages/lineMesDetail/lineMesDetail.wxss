@import '../../component/nullTip/nullTip.wxss';

.messageWrap{
	width: 100%;
	padding-left: 32rpx;
	padding-right: 32rpx;
	box-sizing: border-box;
	margin-bottom:20rpx;
	background-color:#fff;
}
.messageWrap .messageItem{
	width: 100%;
	height: 130rpx;
	box-sizing: border-box;
	padding-top: 22rpx;
}
.messageWrap .messageItem image{
	width: 80rpx;
	height: 80rpx;
	float: left;
}
.messageWrap .messageItem .name{
	height: 80rpx;
	line-height: 80rpx;
	font-size: 30rpx;
	color: #333333;
	padding-left:30rpx;
	float:left;
}
.messageWrap .messageItem .date{
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	color: #999999;
	float:right;
	text-algin:right;
}
.messageWrap .messageContent{
	width:100%;
	border-top:1px solid #dddddd;
	padding-top:20rpx;
	padding-bottom:20rpx;
	line-height:48rpx;
	font-size:24rpx;
	color:#003333;
}
.loading{
	width:100%;
	height:38rpx;
	position:relative;
	background-color:#fff;
}
.loading .loadinggif{
	width:200rpx;
	height:18rpx;
	position:absolute;
	top: 10rpx;
	left:50%;
	margin-left:-100rpx;
}
